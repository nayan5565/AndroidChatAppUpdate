<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dev.chatapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".tools.MainApplication"

        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TabActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegistrationActvityNew"
            android:theme="@style/Translucent" />
        <activity android:name=".activity.SettingsActivity" />
        <activity
            android:name=".activity.LoginActivityNew"
            android:theme="@style/TranslucentBackground" />
        <activity android:name=".activity.ChatActivity" />
        <activity
            android:name=".activity.StatusActivity"
            android:parentActivityName=".activity.SettingsActivity" />
        <activity android:name=".activity.ProfileActivity">
            <intent-filter>
                <action android:name="in.tvac.akshaye.lapitchat_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UserActivityNew" />
        <activity android:name=".activity.MainActivityNew"/>
        <activity android:name=".activity.ChatActivityNew"
            android:parentActivityName=".activity.MainActivityNew"/>
        <activity android:name=".activity.FriendRequiestActivity"/>

        <service
            android:name=".service.FriendChatService"
            android:exported="false"
            android:persistent="true" />
        <service android:name=".tools.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>